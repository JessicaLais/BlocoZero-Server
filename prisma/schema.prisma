generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Enterprise {
  id        Int      @id @default(autoincrement())
  name      String
  cnpj      String?  @unique
  address   String?
  phone     String?
  email     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users User[]
  works Work[]
  items Item[] // 游녣 adiciona rela칞칚o oposta
}

model User {
  id            Int      @id @default(autoincrement())
  enterprise_id Int
  position      String
  name          String
  email         String   @unique
  password      String
  phone         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  enterprise Enterprise @relation(fields: [enterprise_id], references: [id])
  works      Work[]     @relation("UserWorks")
  usages     Usage[] // 游녣 adiciona rela칞칚o oposta
}

model Work {
  id              Int      @id @default(autoincrement())
  enterprise_id   Int
  enterprise_name String
  title           String
  location        String
  employees       Int
  budget          Float
  start_date      DateTime
  end_date        DateTime
  progress        Int
  description     String
  status          String
  photo_url       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  enterprise Enterprise @relation(fields: [enterprise_id], references: [id])
  users      User[]     @relation("UserWorks")
  items      Item[] // 游녣 adiciona rela칞칚o oposta
  usages     Usage[] // 游녣 adiciona rela칞칚o oposta
}

model Item {
  id            Int      @id @default(autoincrement())
  enterprise_id Int
  work_id       Int
  code          String   @unique  // c칩digo 칰nico do material/equipament
  name          String            // nome do item
  type          String           // "material" | "equipamento" | "EPI"
  quantity      Int             // quantidade dispon칤vel em estoque
  unit          String?         // unidade de medida (ex: kg, m, unidade)
  lote          String?         // lote do material/EPI
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  enterprise Enterprise @relation(fields: [enterprise_id], references: [id])
  work       Work       @relation(fields: [work_id], references: [id])
  usages     Usage[]
}


model Usage {
  id          Int      @id @default(autoincrement())
  itemId      Int      // C칩digo do equipamento/material (FK para Item)
  quantity    Int      // Quantidade usada
  userId      Int      // Funcion치rio respons치vel
  workId      Int      // Obra vinculada
  lote        String   // Lote do material/EPI
  usedAt      DateTime // Data de uso
  purpose     String   // Finalidade de uso
  createdAt   DateTime @default(now())

  item Item   @relation(fields: [itemId], references: [id])
  user User   @relation(fields: [userId], references: [id])
  work Work   @relation(fields: [workId], references: [id])
}

