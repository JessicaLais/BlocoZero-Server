// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Enterprise {
  id        Int      @id @default(autoincrement())
  name      String
  cnpj      String?   @unique       // opcional, documento fiscal
  address   String?                 // endereço da empresa
  phone     String?                 // telefone de contato
  email     String?                 // e-mail de contato
  createdAt DateTime @default(now())  // data de criação
  updatedAt DateTime @updatedAt       // última atualização

  users     User[]                  // relação 1:N com usuários
  works     Work[]                  // relação 1:N com trabalhos
}


model User {
  id            Int       @id @default(autoincrement())
  enterprise_id Int
  position      String
  name          String
  email         String    @unique
  password      String
  phone         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  enterprise    Enterprise @relation(fields: [enterprise_id], references: [id])
  works         Work[]      @relation("UserWorks") // nome da relação
}

model Work {
  id              Int       @id @default(autoincrement())
  enterprise_id   Int
  enterprise_name String
  title           String
  location        String
  employees       Int
  budget          Float
  start_date      DateTime
  end_date        DateTime
  progress        Int
  description     String
  status          String
  photo_url       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  enterprise      Enterprise @relation(fields: [enterprise_id], references: [id])
  users           User[]     @relation("UserWorks") // lado oposto da relação
}
